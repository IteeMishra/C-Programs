#include<bits/stdc++.h>
using namespace std;
int main(){
int n; 
cout<<"Input size of array"<<endl;
cin>>n;
cout<<"input the array elements"<<endl;
int a[n];
for (int i=0;i<n;i++)
{
    cin>>a[i];
}
n=sizeof(a)/sizeof(a[0]);
reverse(a,a+n);
cout<<"reversed array: ";
for(int i=0;i<n;i++){
    cout<<a[i]<<" ";
}
return 0;

}
